#include <stdio.h>
#include <string.h>

int main()
{
    char names[4][80];
    double hit[4];
    int i, num1, num2, j;
    float max, min, avg;

    for (i = 0; i < 4; i++) {
        printf("Name: ");
        scanf("%s", names[i]);
        printf("Hit: ");
        scanf("%lf", &hit[i]);
    }

    max = hit[0];
    num1 = 0;
    for (i = 1; i < 4; i++) {
        if (hit[i] >= max) {
            max = hit[i];
            num1 = i;
        }
    }

    min = hit[0];
    num2 = 0;
    for (j = 1; j < 4; j++) {
        if (hit[j] <= min) {
            min = hit[j];
            num2 = j;
        }
    }

    avg = 0;
    for (i = 0; i < 4; i++) {
        avg = avg + hit[i];
    }

    printf("%-s %-.3f\n", names[num1], max);
    printf("%-s %-.3f\n", names[num2], min);
    printf("Average: %.3f", avg / 4.0);

    return 0;

}
